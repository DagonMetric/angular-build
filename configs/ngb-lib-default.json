{
  "$schema": "../schemas/lib-project-config-schema.json#",
  "root": "src",
  "outputPath": "dist",
  "tsTranspilation": {
    "tsConfig": "tsconfig-build.json"
  },
  "packageOptions": {
    "packageJsonFile": "package.json"
  },
  "envOverrides": {
    "prod": {
      "banner": "../banner.txt",
      "clean": {
        "beforeBuild": {
          "cleanOutDir": true
        }
      },
      "copy": [
        "../LICENSE",
        "README.md"
      ],
      "bundles": [{
          "entry": "index.js",
          "entryRoot": "tsOutDir",
          "libraryTarget": "es",
          "outputFilePath": "bundles/"
        },
        {
          "entryRoot": "prevBundleOutDir",
          "libraryTarget": "es",
          "outputFilePath": "bundles/",
          "transformScriptTargetOnly": true,
          "scriptTarget": "es5"
        },
        {
          "entryRoot": "prevBundleOutDir",
          "libraryTarget": "umd",
          "outputFilePath": "bundles/"
        }
      ],
      "packageOptions": {
        "packageJsonFile": "package.json",
        "reExportTypingsAndMetaDataAs": "[packagename]"
      }
    }
  }
}
