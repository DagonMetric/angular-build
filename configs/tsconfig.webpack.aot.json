{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "pretty": true,
    "noEmit": true,
    "noEmitOnError": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "skipDefaultLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": "",
    "mapRoot": "./",
    "outDir": "dist/out-tsc",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "wwwroot"
  ],
  "angularCompilerOptions": {
    "genDir": "./aot-compiled",
    "skipMetadataEmit": true
  }
}