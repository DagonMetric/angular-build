# http://editorconfig.org

root = true

[*]
charset = utf-8

[*.{js,ts}]
trim_trailing_whitespace = true
insert_final_newline = false
indent_style = space
indent_size = 4

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
