# http://editorconfig.org

root = true

[*]
end_of_line = crlf
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2

[{src,tools}/**.{ts,js}]
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4

[*.md]
insert_final_newline = false
trim_trailing_whitespace = true