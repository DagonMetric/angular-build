{
  "name": "@dagonmetric/angular-build",
  "version": "8.0.0-rc.1",
  "description": "Another build and packaging tool for Angular applications and library projects.",
  "keywords": [
    "angular-build",
    "angular",
    "cli",
    "angular-build-tools",
    "build-tools",
    "angular-library-builder",
    "angular-library-packaging-tools",
    "angular-architect-builder",
    "angular-devkit",
    "rollup",
    "webpack",
    "typescript",
    "html-injection"
  ],
  "author": "DagonMetric",
  "license": "MIT",
  "engines": {
    "node": ">=10.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DagonMetric/angular-build.git"
  },
  "bugs": {
    "url": "https://github.com/DagonMetric/angular-build/issues"
  },
  "homepage": "https://github.com/DagonMetric/angular-build",
  "bin": {
    "ngb": "./bin/ngb"
  },
  "experimental": true,
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "builders": "dist/src/architect/builders.json",
  "scripts": {
    "ng": "ng",
    "clean": "rimraf -- dist schemas",
    "lint": "node node_modules/tslint/bin/tslint -t verbose -p tsconfig.json -c tslint.json",
    "tsc": "node node_modules/typescript/bin/tsc -p tsconfig.json",
    "generate-schemas": "node tools/generate-schemas.js",
    "copy-files": "node tools/copy-files.js",
    "ngb:version": "node dist/bin/ngb --version",
    "test": "npm run build:samples",
    "build": "npm run clean && npm run tsc && npm run generate-schemas && npm run copy-files && npm run ngb:version",
    "build:samples": "npm run build:sample-app-prod && npm run build:sample-lib-prod",
    "build:sample-app": "node -r source-map-support/register dist/bin/ngb build --config=samples/hello-world-ng-app/angular-build.json",
    "build:sample-app-prod": "node dist/bin/ngb build --config=samples/hello-world-ng-app/angular-build.json --env.prod --env.aot",
    "build:sample-lib": "node -r source-map-support/register dist/bin/ngb build --config=samples/hello-world-ng-lib/angular-build.json --verbose",
    "build:sample-lib-prod": "node dist/bin/ngb build --config=samples/hello-world-ng-lib/angular-build.json --env.prod --verbose",

    "build:ng:hello-world": "ng build hello-world --verbose",
    "build:ng:hello-world:prod": "ng build hello-world --verbose -c=production",

    "build:ng:hello-world-project-extends": "ng build hello-world-project-extends --verbose",
    "build:ng:hello-world-project-extends:prod": "ng build hello-world-project-extends --verbose -c=production",
    "build:ng:hello-world-builtin-extends": "ng build hello-world-builtin-extends --verbose",
    "build:ng:hello-world-builtin-extends:prod": "ng build hello-world-builtin-extends --verbose -c=production",
    "build:ng:hello-world-file-extends": "ng build hello-world-file-extends --verbose",
    "build:ng:hello-world-file-extends:prod": "ng build hello-world-file-extends --verbose -c=production"
  },
  "dependencies": {
    "@angular-devkit/architect": "^0.800.0-rc.3",
    "@angular-devkit/build-optimizer": "^0.800.0-rc.3",
    "@angular-devkit/build-webpack": "^0.800.0-rc.3",
    "@angular-devkit/core": "^8.0.0-rc.3",
    "@ngtools/webpack": "^8.0.0-rc.3",
    "ajv": "^6.10.0",
    "ajv-keywords": "^3.4.0",
    "autoprefixer": "^9.5.1",
    "builtins": "^2.0.0",
    "clean-css": "^4.2.1",
    "cross-spawn": "^6.0.5",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "denodeify": "^1.2.1",
    "ejs": "^2.6.1",
    "file-loader": "^3.0.1",
    "fs-extra": "^8.0.0",
    "glob": "^7.1.4",
    "html-minifier": "^4.0.0",
    "license-webpack-plugin": "^2.1.1",
    "loader-utils": "^1.2.3",
    "magic-string": "^0.25.2",
    "mini-css-extract-plugin": "^0.6.0",
    "minimatch": "^3.0.4",
    "node-sass": "^4.12.0",
    "parse5": "^5.1.0",
    "postcss": "^7.0.16",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-url": "^8.0.0",
    "raw-loader": "1.0.0",
    "resolve": "^1.10.1",
    "rollup": "^1.11.3",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-node-resolve": "^4.2.4",
    "rxjs": "~6.4.0",
    "sass-loader": "^7.1.0",
    "sorcery": "^0.10.0",
    "source-map-url": "^0.4.0",
    "style-loader": "^0.23.1",
    "supports-color": "^6.1.0",
    "terser-webpack-plugin": "^1.2.3",
    "ts-loader": "^6.0.0",
    "tsickle": "^0.35.0",
    "typescript": "~3.4.5",
    "uglify-js": "^3.5.11",
    "update-notifier": "^3.0.0",
    "url-loader": "^1.1.2",
    "uuid": "^3.3.2",
    "webpack": "^4.31.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-merge": "^4.2.1",
    "webpack-sources": "^1.3.0",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "@angular/cli": "^8.0.0-rc.3",
    "@angular/common": "^8.0.0-rc.3",
    "@angular/compiler": "^8.0.0-rc.3",
    "@angular/compiler-cli": "^8.0.0-rc.3",
    "@angular/core": "^8.0.0-rc.3",
    "@angular/platform-browser": "^8.0.0-rc.3",
    "@angular/platform-browser-dynamic": "^8.0.0-rc.3",
    "@angular/router": "^8.0.0-rc.3",
    "@types/autoprefixer": "^9.5.0",
    "@types/cross-spawn": "^6.0.0",
    "@types/denodeify": "^1.2.31",
    "@types/fs-extra": "^5.1.0",
    "@types/glob": "^7.1.1",
    "@types/html-minifier": "^3.5.3",
    "@types/loader-utils": "^1.1.3",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^12.0.0",
    "@types/node-sass": "^4.11.0",
    "@types/parse5": "^5.0.0",
    "@types/resolve": "0.0.8",
    "@types/supports-color": "^5.3.0",
    "@types/uglify-js": "^3.0.4",
    "@types/webpack": "^4.4.31",
    "@types/webpack-merge": "^4.1.5",
    "@types/webpack-sources": "^0.1.5",
    "@types/yargs": "^13.0.0",
    "core-js": "^3.0.1",
    "rimraf": "^2.6.3",
    "source-map": "^0.7.3",
    "source-map-support": "^0.5.12",
    "tslint": "^5.16.0",
    "tslint-microsoft-contrib": "^6.1.1",
    "typescript-json-schema": "^0.37.0",
    "typescript-tslint-plugin": "^0.3.1",
    "webpack-dev-server": "^3.3.1",
    "zone.js": "~0.9.1"
  }
}
