{
  "$schema": "node_modules/@bizappframework/angular-build/schemas/schema-draft-04.json#",
  "apps": [
    {
      "name": "browser",
      "platfromTarget": "web",
      "srcDir": "",
      "outDir": "wwwroot",
      "main": "main.browser.ts",
      "assets": [
        "assets/**/*"
      ],
      "styles": [],
      "scripts": [],
      "polyfills": [
        "polyfills.ts",
        "zone.js/dist/zone"
        //"reflect-metadata"
        //"web-animations-js",
        //"intl"
      ],
      "dlls": [
        {
          "entry": "../package.json",
          "excludes": [
            "@angular/compiler-cli",
            "@angular/platform-server",
            "@angular/service-worker",
            "@angular/tsc-wrapped",
            "@angular/upgrade",

            "angular2-platform-node",

            "angular2-universal-polyfills",
            "aspnet-prerendering",
            "aspnet-webpack",

            "core-js",

            "codelyzer",
            "css",

            "es6-promise",
            "es6-shim",
            "events",
            "event-source-polyfill",
            "ie-shim",
            "intl",
            "isomorphic-fetch",

            "jasmine-core",

            "jquery",

            "karma",
            "karma-cli",

            "node-sass",

            "preboot",

            "querystring-es3",

            "reflect-metadata",
            "rxjs",

            "sockjs-client",
            "strip-ansi",
            "systemjs",

            "tslib",
            "tslint",
            "ts-helpers",
            "typescript",

            "url",

            "web-animations-js",
            "webpack",
            "webpack-hot-middleware",
            "webpack-merge",

            "zone.js"
          ]
        }
      ],
      "tsconfig": "tsconfig.browser.json",
      "faviconConfig": "favicon-config.json",
      "publicPath": "/",
      "htmlInjectOptions": {
        "index": "",
        "indexOut": "",
        "scriptsOut": "",
        "stylesOut": "",
        "iconsOut": "",
        "customTagAttributes": []
      },
      "bundleAnalyzerOptions": {
        "generateStatsFile": true,
        "generateAnalyzerReport": true
      },
      "envOverrides": {
        // Last order wins!
        "dev": {
          // Default - true
          "referenceDll": true,
          "polyfills": [
            "polyfills.ts",
            "zone.js/dist/zone",
            "zone.js/dist/long-stack-trace-zone",
            //"reflect-metadata",
            "event-source-polyfill"
          ]
        },
        "prod": {
          "environmentFile": "environments/environment.prod.ts",
          "moduleReplacements": [
            {
              "resourcePath": "zone.js/long-stack-trace-zone",
              "newResourcePath": "empty.js",
              "resolveFrom": "projectRoot"
            },
            {
              "resourcePath": "@angularclass/hmr",
              "newResourcePath": "empty.js",
              "resolveFrom": "projectRoot"
            },
            {
              "resourcePath": "environments/environment.ts",
              "newResourcePath": "environments/environment.prod.ts"
            }
          ]
        },
        "aot": {
          //"main": "main.browser.aot.ts",
          //"tsconfig": "tsconfig.browser.aot.json"
        }
      }
    },
    {
      "name": "server",
      "extends": "browser",
      "platfromTarget": "node",
      "outDir": "dist",
      "main": "main.server.ts",
      "styles": [],
      "polyfills": [],
      "dlls": [],
      "tsconfig": "tsconfig.server.json",
      "bundleAnalyzerOptions": {},
      "envOverrides": {
        "dev": {
          "referenceDll": false
        },
        "prod": {
          "moduleReplacements": [
            {
              "resourcePath": "environments/environment.ts",
              "newResourcePath": "environments/environment.prod.ts"
            }
          ]
        },
        "aot": {
          //"main": "main.server.aot.ts",
          //"tsconfig": "tsconfig.server.aot.json"
        },
        "universal": {
          "skip": false
        }
      },
      "skip": true
    }
  ],
  "libs": []
}