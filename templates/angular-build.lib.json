{
  "$schema": "node_modules/@bizappframework/angular-build/schemas/schema-draft-04.json#",
  "libs": [
    {
      "srcDir": "src",
      "outDir": "dist",
      "assets": [
        "../LICENSE",
        "../README.md"
      ],
      "styles": [
        //{
        //  "from": "theming/prebuilt/styles.scss",
        //  "to": "prebuilt-themes/"
        //}
      ],
      "tsTranspilations": [
        {
          //"name": "es2015-es2015",
          "tsconfig": "tsconfig.json",
          "inlineMetaDataResources": true,
          "outDir": "typings"
        }
      ],
      "bundleTargets": [
        {
          "name": "esm-es2015",
          "entryResolution": {
            "entryRoot": "tsTranspilationOutDir"
            // default to first item index
            //"tsTranspilationIndex": 0
          },
          "entry": "index.js",
          "libraryTarget": "es",
          "outDir": "bundles"
        },
        {
          "name": "esm-es5",
          "entryResolution": {
            "entryRoot": "bundleTargetOutDir"
            // default to previous bundle target
            // "bundleTargetIndex": "esm-es2015"
          },
          "libraryTarget": "es",
          "outDir": "bundles",
          "inlineResources": false,
          "addPureAnnotations": true,
          "transformScriptTargetOnly": true,
          "scriptTarget": "es5"
        },
        {
          "name": "umd-es5",
          "entryResolution": {
            "entryRoot": "bundleTargetOutDir"
            // default to previous bundle target
            // "bundleTargetIndex": "esm-es5"
          },
          "libraryTarget": "umd",
          "outDir": "bundles",
          "inlineResources": false
        }
      ],
      "packageOptions": {
        "packageConfigFile": "package.json",
        "typingsAndMetaDataReExport": {
          "entry": "index.d.ts",
          "outFileName": "[package-name].d.ts"
        }
      },
      "banner": "banner.txt",
      "cleanFiles": [
        "typings/**/*.js",
        "typings/**/*.map",
        "typings/**/*.html",
        "typings/**/*.css"
      ],
      "envOverrides": {
        "dev": {

        },
        "prod": {

        }
      }
    }
  ]
}