{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",

    "experimentalDecorators": true,

    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strict": true,

    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,

    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "es2017"
    ],
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",

    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src"
  ],
  "compileOnSave": false
}