{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules/**/*",
    "bin/**/*",
    "dist/**/*",
    "templates/**/*",
    "tools/**/*"
  ],
  "compileOnSave": true
}