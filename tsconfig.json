{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "skipDefaultLibCheck": true,
    "lib": [ "es2015" ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "rootDir": "src"
  },
  "exclude": [
    "bin",
    "node_modules",
    "typings",
    "Scripts/typings",
    "configs",
    "dist"
  ],
  "compileOnSave": true
}