{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,

    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": [ "es2018", "dom" ],

    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,

    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist/lib1",
    "paths": {
      "@ngb-demo/lib1": [ "./lib1" ]
    }
  }
}
