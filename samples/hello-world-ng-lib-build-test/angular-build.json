{
  "$schema": "./../../dist/schemas/schema-draft-04.json#",
  "libs": [
    {
      "srcDir": ".",
      "outDir": "dist",

      "libraryName": "hello-world",
      "banner": "banner.txt",

      "tsTranspilation": {
        "tsconfig": "tsconfig.json"
      },

      "envOverrides": {
        "prod": {
          "clean": {
            "beforeRun": {
              "cleanOutDir": true
            }
          },

          "copy": [
            "LICENSE",
            "README.md"
          ],

          "bundles": [
            {
              "entry": "index.js",
              "entryRoot": "tsOutDir",
              "libraryTarget": "es",
              "outDir": "bundles"
            },
            {
              "entryRoot": "prevBundleOutDir",
              "libraryTarget": "es",
              "outDir": "bundles",
              "transformScriptTargetOnly": true,
              "scriptTarget": "es5"
            },
            {
              "entryRoot": "prevBundleOutDir",
              "libraryTarget": "umd",
              "outDir": "bundles"
            }
          ],

          "packageOptions": {
            "packageJsonFile": "package.json",
            "reExportTypingsAndMetaDataAs": "[packagename]"
          }
        }
      }
    }
  ]
}
