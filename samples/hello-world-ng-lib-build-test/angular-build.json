{
  "$schema": "./../../schemas/schema.json#",
  "libs": [{
    "root": ".",
    "outputPath": "dist",
    "libraryName": "hello-world",
    "banner": "banner.txt",
    "tsTranspilation": {
      "tsConfig": "tsconfig.json"
    },
    "envOverrides": {
      "prod": {
        "clean": {
          "beforeBuild": {
            "cleanOutDir": true
          }
        },
        "copy": [
          "LICENSE",
          "README.md"
        ],
        "bundles": [{
            "entry": "index.js",
            "entryRoot": "tsOutDir",
            "libraryTarget": "es",
            "outputFilePath": "bundles/"
          },
          {
            "entryRoot": "prevBundleOutDir",
            "libraryTarget": "es",
            "outputFilePath": "bundles/",
            "transformScriptTargetOnly": true,
            "scriptTarget": "es5"
          },
          {
            "entryRoot": "prevBundleOutDir",
            "libraryTarget": "umd",
            "outputFilePath": "bundles/"
          }
        ],
        "packageOptions": {
          "packageJsonFile": "package.json",
          "reExportTypingsAndMetaDataAs": "[packagename]"
        }
      }
    }
  }]
}
