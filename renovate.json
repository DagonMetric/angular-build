{
  "extends": [
    "config:base"
  ],
  "timezone": "Asia/Yangon",
  "schedule": [
    "after 11pm and before 6am every weekday",
    "after 11pm and before 6am every weekend"
  ],
  "packageFiles": ["package.json"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "packageNames": [
        "@ngtools/webpack"
      ],
      "packagePatterns": [
        "^@angular-devkit\/.*"
      ],
      "groupName": "angular-devkit"
    },
    {
      "packagePatterns": [
        "^@angular\/.*"
      ],
      "groupName": "angular"
    },
    {
      "packagePatterns": [
        "^@types\/.*"
      ],
      "groupName": "types"
    },
    {
      "packageNames": [
        "loader-utils",
        "mini-css-extract-plugin"
      ],
      "packagePatterns": [
        ".*-loader$",
        ".*-webpack-plugin$",
        "^webpack-.*"
      ],
      "excludePackageNames": ["raw-loader"],
      "groupName": "webpack-tools"
    },
    {
      "packageNames": [
        "builtins"
      ],
      "packagePatterns": [
        "^rollup-plugin-*"
      ],
      "groupName": "rollup-tools"
    },

    {
      "packageNames": ["raw-loader"],
      "allowedVersions": "<=1.0.0",
      "automerge": false
    },
    {
      "packageNames": ["typescript"],
      "allowedVersions": "<=3.4.5",
      "automerge": false
    },
    {
      "packageNames": ["rxjs"],
      "allowedVersions": "<=6.4.0",
      "automerge": false
    }
  ]
}
